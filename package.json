{
  "name": "postcss-plugin-boilerplate",
  "description": "PostCSS plugin boilerplate",
  "repository": "postcss/postcss-plugin-boilerplate",
  "version": "0.0.0",
  "license": "MIT",
  "bin": "cli.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "template"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "dependencies": {
    "enquirer": "^2.3.6",
    "gogen": "^2.2.0"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.1",
    "jest": "^27.2.5",
    "lint-staged": "^10.5.4",
    "simple-git-hooks": "^2.0.2"
  },
  "keywords": [
    "postcss",
    "postcss-plugin",
    "boilerplate"
  ]
}
